{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "*": ["types/*"],
      "@/*": ["src/*"],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/components/*.vue", "src/components/**/*.vue", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}